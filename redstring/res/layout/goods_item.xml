<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center" android:layout_weight="1" android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/goods_plice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="@color/text_color"/>

</LinearLayout>